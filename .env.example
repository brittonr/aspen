# Blixard MVP Configuration
# Copy this file to .env and fill in your values
# WARNING: Never commit .env to version control!

# =============================================================================
# SECURITY - REQUIRED
# =============================================================================

# API Key for authenticating requests (minimum 32 characters)
# Generate with: openssl rand -hex 32
BLIXARD_API_KEY=CHANGE_ME_YOUR_SECRET_API_KEY_HERE_MIN_32_CHARS

# =============================================================================
# HIQLITE SECRETS - REQUIRED
# =============================================================================

# Raft consensus secret (minimum 32 characters)
# This must be the same across all nodes in the cluster
HIQLITE_SECRET_RAFT=CHANGE_ME_YOUR_RAFT_SECRET_HERE_MIN_32_CHARS

# API authentication secret (minimum 32 characters)
HIQLITE_SECRET_API=CHANGE_ME_YOUR_API_SECRET_HERE_MIN_32_CHARS

# Encryption key for data at rest (base64 encoded, 32 bytes)
# Generate with: openssl rand -base64 32
HIQLITE_ENC_KEY=CHANGE_ME_YOUR_BASE64_ENCRYPTION_KEY_HERE

# =============================================================================
# HIQLITE CONFIGURATION - OPTIONAL
# =============================================================================

# Node ID for this instance (default: 1)
# HIQLITE_NODE_ID=1

# Data directory for hiqlite storage (default: ./data/hiqlite)
# HIQLITE_DATA_DIR=./data/hiqlite

# =============================================================================
# CACHE CONFIGURATION - OPTIONAL
# =============================================================================

# Cache TTL in seconds (default: 5)
# Increasing this reduces database load but increases staleness
# CACHE_TTL_SECS=5

# =============================================================================
# TIMEOUTS - OPTIONAL
# =============================================================================

# Default timeout for operations in seconds (default: 30)
# DEFAULT_TIMEOUT_SECS=30

# Long-running operation timeout in seconds (default: 300)
# LONG_TIMEOUT_SECS=300

# =============================================================================
# RATE LIMITING - OPTIONAL (for future use)
# =============================================================================

# Requests per second limit (default: 100)
# RATE_LIMIT_RPS=100

# Burst size for rate limiting (default: 1000)
# RATE_LIMIT_BURST=1000

# =============================================================================
# WORKER CONFIGURATION - OPTIONAL
# =============================================================================

# Control plane ticket for workers (if using P2P mode)
# CONTROL_PLANE_TICKET=

# =============================================================================
# DEPLOYMENT - OPTIONAL
# =============================================================================

# HTTP port (default: 3020)
# HTTP_PORT=3020

# Enable debug logging (default: false)
# RUST_LOG=mvm_ci=debug,tower_http=debug,info